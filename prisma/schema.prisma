generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  UserID        Int          @id @default(autoincrement())
  Firstname     String       @db.VarChar(150)
  Lastname      String       @db.VarChar(150)
  Username      String       @unique @db.VarChar(150)
  Password      String       @db.VarChar(500)
  Email         String       @unique @db.VarChar(150)
  UserProfile   UserProfile? @relation(fields: [UserProfileID], references: [UserProfileID])
  UserProfileID Int?
  IsDisabled    Boolean      @default(false)
  AutoDisable   Boolean      @default(false)
}

model UserProfile {
  UserProfileID   Int     @id @default(autoincrement())
  UserProfileName String  @unique @db.VarChar(500)
  Users           Users[]
}

model Menus {
  MenuID   Int    @id @default(autoincrement())
  MenuName String @unique @db.VarChar(150)
}
